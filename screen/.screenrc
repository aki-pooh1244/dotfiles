# GNU screen config

# urf 8
defutf8 on
defencoding utf8
encoding utf8 utf8

startup_message off

# escape key
escape ^Tt

# scroll
defscrollback 10000
termcapinfo xterm* ti@:te@

altscreen on
autodetach on

# color
defbce on
term xterm-256color

# status line
hardstatus alwayslastline "%{= cd} %-w%{= dd} %n %t* %{-}%+w %= LoadAVG [%l] "

# default shell
shell -${SHELL}

# show some buffers on startup
screen -M -t Shell 0
screen -t Shell 1
select 0

# screen saver
idle 3600
blankerprg fortune

# window
cjkwidth off

# key-bind
bind ^W windowlist -b
bind ^Q quit
# split window
bind -c REGION 2 split
bind -c REGION 1 only
bind -c REGION 0 remove
bind -c REGION o focus
bind -c REGION \^ resize
bind x command -c REGION
# move tabs
bindkey -k F11 prev
bindkey -k F12 next
# markkeys
markkeys h=^B:l=^F:$=^E:^U=^Z:^D=^V
